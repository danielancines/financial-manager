<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.FinancialManager.Views.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout>
        <Label
            Text="Login"
            VerticalOptions="Center" 
            HorizontalOptions="Start" />
        <Entry Margin="0,0,0,10"/>
        <Label 
            Text="Password"
            VerticalOptions="Center" 
            HorizontalOptions="Start" />
        <Entry Margin="0,0,0,30" IsPassword="True" ReturnCommand="{Binding LoginCommand}"/>
        <Button Text="Login" Margin="20,0" Command="{Binding LoginCommand}"/>
    </VerticalStackLayout>
</ContentPage>

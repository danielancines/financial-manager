<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maui.FinancialManager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Maui.FinancialManager.Views"
    xmlns:local="clr-namespace:Maui.FinancialManager"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <FlyoutItem Title="Medicine Prices"
                Icon="dog.png"
                Route="MedicinePrices">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:MedicinePricesPage}" />
        </Tab>
    </FlyoutItem>
</Shell>
